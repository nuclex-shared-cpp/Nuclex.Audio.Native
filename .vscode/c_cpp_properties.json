{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/Include/**",
                "${workspaceFolder}/../Nuclex.Support.Native/Include/**",
                "${workspaceFolder}/../third-party/nuclex-flac/build/include/**",
                "${workspaceFolder}/../third-party/nuclex-wavpack/build/include/**",
                "${workspaceFolder}/../third-party/nuclex-opusfile/build/include/**",
                "${workspaceFolder}/../third-party/nuclex-opus/build/include/**",
                "${workspaceFolder}/../third-party/nuclex-ogg/build/include/**",
                "${workspaceFolder}/../third-party/nuclex-googletest/build/googletest/include/**",
                "${workspaceFolder}/../third-party/nuclex-celero/build/include/**"
            ],
            "defines": [
                "NUCLEX_AUDIO_EXECUTABLE",
                "NUCLEX_AUDIO_SOURCE",
                "NUCLEX_AUDIO_HAVE_OPUS",
                "NUCLEX_AUDIO_HAVE_VORBIS",
                "NUCLEX_AUDIO_HAVE_WAVPACK",
                "NUCLEX_AUDIO_HAVE_FLAC"
            ],
            "compilerPath": "/usr/bin/g++",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "gcc-x64",
            "compilerArgs": [
                "-fvisibility=hidden",
                "-Wpedantic",
                "-Wall",
                "-Wextra",
                "-Wno-unknown-pragmas",
                "-fpic",
                "-funsafe-math-optimizations",
                "-std=c++17",
                "-fvisibility-inlines-hidden"
            ]
        }
    ],
    "version": 4
}
